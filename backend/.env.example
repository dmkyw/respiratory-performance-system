# PocketBase 环境配置示例
# 复制此文件为 .env 并填入实际值

# 数据库配置
PB_DATA_DIR=/app/pb_data

# 服务器配置
PB_HOST=0.0.0.0
PB_PORT=8080

# 管理员配置（首次启动时创建）
PB_ADMIN_EMAIL=admin@example.com
PB_ADMIN_PASSWORD=your_secure_password_here

# 应用配置
PB_APP_NAME=呼吸科绩效分配系统
PB_APP_URL=https://your-app.onrender.com

# CORS 配置
PB_CORS_ORIGINS=*

# 日志配置
PB_LOG_LEVEL=INFO

# 备份配置
PB_BACKUP_ENABLED=true
PB_BACKUP_INTERVAL=24h

# 文件上传配置
PB_MAX_FILE_SIZE=10MB

# JWT 配置
PB_JWT_SECRET=your_jwt_secret_here
PB_JWT_DURATION=7200

# 邮件配置（可选）
PB_SMTP_HOST=
PB_SMTP_PORT=587
PB_SMTP_USERNAME=
PB_SMTP_PASSWORD=
PB_SMTP_FROM=

# S3 存储配置（可选）
PB_S3_ENABLED=false
PB_S3_BUCKET=
PB_S3_REGION=
PB_S3_ENDPOINT=
PB_S3_ACCESS_KEY=
PB_S3_SECRET=